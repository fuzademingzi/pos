#:import hex kivy.utils.get_color_from_hex
<Label>:
    font_name: "SimHei"

<TextInput>:
    font_name: "SimHei"

<Button>:
    font_name: "SimHei"
<SigninWindow>:
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: hex('#159F9A')
		Rectangle:
			size: self.size
			pos: self.pos
	BoxLayout:
		size_hint_y: .05
	BoxLayout:
		canvas.before:
			Color:
				rgba: hex('#F2F2F2')
			Rectangle:
				size: self.size
				pos: self.pos
		size_hint_y: .9
		Label:
			size_hint_x: .3
		BoxLayout:
			size_hint_x: .4
			orientation: 'vertical'
			Label: 
				size_hint_y: .15
				text: '欢迎使用海安收账系统'
				color: (0,0,0,1)
			Label:
				id: signin_notificacion
				size_hint_y: .15
				color: (1, .2, .2, 1)
			TextInput:
				id: username
				size_hint_y: .1
				hint_text: '用户名'
				multiline: False
				write_tab: False
				on_text_validate: root.verificar_usuario(self.text, password.text)
			TextInput:
				id: password
				size_hint_y: .1
				hint_text: '密码'
				multiline: False
				write_tab: False
				password: True
				on_text_validate: root.verificar_usuario(username.text, self.text)
			Button:
				size_hint_y: .1
				background_normal: ''
				background_color: hex('#393939')
				text: '登录'
				on_release: root.verificar_usuario(username.text, password.text)
			Label:
				size_hint_y: .4
		Label:
			size_hint_x: .3
	BoxLayout:
		size_hint_y: .05


